        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Character_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Favorite_Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Favorite_Food)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth_Date)
            </td>
